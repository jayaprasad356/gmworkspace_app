<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardMaxElevation="5dp"
    app:cardElevation="3dp"
    android:background="@color/primary_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tvProjectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project name"
                android:textColor="@color/black"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/pop_medium"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/tvVerificationStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/pop_medium"
                android:text="Verified"
                android:textColor="@color/green"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvProjectDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Worked on Somex task and some Task"
            android:textColor="@color/black"
            android:fontFamily="@font/pop_regular"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:gravity="start"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pop_regular"
                android:text="Total Worked Hours : "
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvProjectWorkedHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/pop_semi"
                android:text="3"
                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/red"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:gravity="end"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tvProjectWorkedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:fontFamily="@font/pop_semi"
                android:text="16/11/2022"
                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>